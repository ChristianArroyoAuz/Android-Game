<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".PresentacionActivity">

    <TextView
        android:id="@+id/etiquetaPresentacion"
        style="@style/Base.TextAppearance.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:autoText="false"
        android:text="COME CEREBROS"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF4840E3"
        android:textSize="38sp"
        tools:ignore="Deprecated,HardcodedText,TextViewEdits" />

    <Button
        android:id="@+id/botonSalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/botonJugar"
        android:layout_alignLeft="@+id/botonJugar"
        android:layout_alignEnd="@+id/botonJugar"
        android:layout_alignRight="@+id/botonJugar"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:background="#4840e3"
        android:text="SALIR"
        android:textColor="#FFF4F41E"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/botonNosotros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/botonSalir"
        android:layout_alignStart="@+id/botonSalir"
        android:layout_alignLeft="@+id/botonSalir"
        android:layout_alignEnd="@+id/botonSalir"
        android:layout_alignRight="@+id/botonSalir"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:background="#4840e3"
        android:text="QUIENES SOMOS?"
        android:textColor="#FFF4F41E"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/botonJugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/botonNosotros"
        android:layout_alignStart="@+id/etiquetaPresentacion"
        android:layout_alignLeft="@+id/etiquetaPresentacion"
        android:layout_alignEnd="@+id/etiquetaPresentacion"
        android:layout_alignRight="@+id/etiquetaPresentacion"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="#4840e3"
        android:text="JUGAR"
        android:textColor="#FFF4F41E"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="450sp"
        android:layout_height="450sp"
        android:layout_above="@+id/botonJugar"
        android:layout_below="@+id/etiquetaPresentacion"
        android:layout_alignStart="@+id/botonJugar"
        android:layout_alignLeft="@+id/botonJugar"
        android:layout_alignEnd="@+id/botonJugar"
        android:layout_alignRight="@+id/botonJugar"
        android:src="@drawable/icono2"
        tools:ignore="ContentDescription" />

</RelativeLayout>