<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.app.game.comecerebros.QuienesSomosActivity">

    <ImageView
        android:id="@+id/imagenChristian"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/christian"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imagenJohan"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignTop="@+id/imagenChristian"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/johan"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="DESARROLLADORES"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF4840E3"
        android:textSize="34sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_centerVertical="true"
        android:text="CHRISTIAN ARROYO."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16dp"
        tools:ignore="HardcodedText,SpUsage" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="JOHAN MONTENEGRO."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16dp"
        tools:ignore="HardcodedText,SpUsage" />

    <Button
        android:id="@+id/botonVolver_QS"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#4840e3"
        android:text="Volver"
        android:textColor="#FFF4F41E"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/informacionJohan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/botonVolver_QS"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:scrollbars="vertical"
        android:text="Johan Montenegro nació en Quito, en la República del Ecuador, el 18 de noviembre de 1989.
                      Se graduó del colegio experimental fiscal Juan Pío Montufar y Estudia en la Escuela Politécnica Nacional.
                      Ingresó a la Escuela Politécnica Nacional y actualmente es egresado de la EPN"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/informacionChristian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignTop="@+id/informacionJohan"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignBottom="@+id/informacionJohan"
        android:scrollbars="vertical"
        android:text="Arroyo Christian, nació en la ciudad de Quito-Ecuador, el 11 de Noviembre.
                      Realizo sus estudios en el Colegio Pedro Pablo Borja N°1 obteniendo el título de Bachiller Fisicomatemático.
                      Ingeniero por la Escuela Politécnica Nacional en la Facultad de Eléctrica y Electrónica, especialización, en Redes de Información."
        tools:ignore="HardcodedText" />

</RelativeLayout>